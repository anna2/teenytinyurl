<% if session[:user_id].nil? %>
	<a href='/login'><h3>Optional Login</h3></a>
<%else%>
	<h3>Welcome to Teeny Tiny URL, <%= User.find(session[:user_id]).username %>!</h3>
	<a href='/logout'>Logout</a>
<% end %>


<form action='/' method='POST'>
	<input type='text' name='long_url' value='http://'>
	<input type='submit'>
</form>

<% if session[:user_id] != nil && ShortenedUrl.find_by(user_id: session[:user_id]) != nil%>
	<h4>Your recently shortened links:</h4>
	<% array = ShortenedUrl.where(user_id: session[:user_id]) %>
	<% array.each do |record| %>
		<%= "<a href='#{record.url}'>localhost:9393/#{ShortenedUrl.encode(record.id)}</a>" + " leads to: #{record.url}" %><br>
		<% end %>
<% end %>